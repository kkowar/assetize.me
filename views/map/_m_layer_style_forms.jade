mixin form_color(color)
  .form_color
    input.colorPicker(type="text" value="#{color}")

mixin form_opacity(opacity,layerID,categoryID)
  div.form_spinner.form_opacity(id="opacity_#{layerID}_#{categoryID}")
    input.value(value="#{parseFloat(opacity).toFixed(1)}" style="width:25px!important")
    a.plus(href="#") +
    a.minus(href="#") -

